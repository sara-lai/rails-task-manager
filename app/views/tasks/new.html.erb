<h1>New Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit "Create Task" %>
<% end %>
<%= link_to "Back", tasks_path %>
